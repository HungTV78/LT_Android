<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Bai1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgSinhVen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avt"
            android:contentDescription="Student Image"
            android:layout_marginBottom="16dp"/>

        <!-- Thông tin sinh viên -->
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên: Lê Tấn Hưng"
            android:textSize="25dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtMSSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSSV: 2001210520"
            android:textSize="20dp"
            android:layout_marginBottom="16dp"/>

        <!-- Sở thích -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sở thích"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Âm nhạc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Âm nhạc:"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rap, Nhạc trẻ"
                android:textSize="18dp"/>
        </LinearLayout>

        <!-- Sách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách:"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuổi trẻ đáng giá bao nhiêu, Lịch sử"
                android:textSize="18dp"/>
        </LinearLayout>

        <!-- Thể thao -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể thao:"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtSoThich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bóng đá, Bóng chuyền"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
